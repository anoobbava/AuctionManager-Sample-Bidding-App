<h1 align="center" >NEW MATCH</h1>
<%= form_for [:admin,@match] do |f| %>
  <table class="form-style-10"  >
	  <tr >
	    <td> <%= f.label :name %> </td>
	    <td> <%= f.text_field :name %></td>

	    <td> <%= f.label :team_1 %></td>
	    <td> <%= f.select(:team_1_id, @teams) %></td>
	 
	    <td> <%= f.label :team_2 %></td>
	    <td> <%= f.select(:team_2_id, @teams) %></td>
	  </tr>
	  <tr>
	    <td/><td/><td><%= f.submit %></td>
	  </tr>
	</table>
<% end %>

<%= link_to 'Back', admin_matches_path, :class => 'myButton' %>
